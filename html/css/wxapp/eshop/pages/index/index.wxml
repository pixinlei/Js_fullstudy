<view class="wrapper">
  <view class="group" wx:for="{{articles}}" wx:for-item="group">
    <view class="group-bar">
      <view class="group-title">{{group.data}}</view>
    </view>
    <view class="group-content">
      <view class="group-content-item" wx:for="{{group.items}}" date-item="{{item}}" wx:for-item="item">
        <view class="group-content-item-desc">{{item.title}}</view>
        <image src="{{item.pic}}" />
      </view>
    </view>
  </view>
</view>