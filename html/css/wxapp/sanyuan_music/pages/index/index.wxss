/**index.wxss**/
scroll-view{
  display: flex;
  flex-direction: column;
}
swiper{
  width: 100%;
  height: 30vh;
}
swiper image{
  width: 100%;
}
.content{
  width: 100%;
  flex: 1;
}
.content-wrapper{
  width:250rpx;
  height: 400rpx;
  padding: 10rpx;
  box-sizing: border-box;
  float: left;
}
.content-wrapper image{
  width: 100%;
  height: 70%;
}
.content-wrapper view{
  width: 100%;
  height: 30%;
  margin: 10rpx;
  font-size: 25rpx;
}
.content-title{
  font-weight: bold;
  margin: 30rpx;
  margin-left: 10rpx;
}