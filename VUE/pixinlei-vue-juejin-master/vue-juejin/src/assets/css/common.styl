
.con {
  padding: 0 20*$unit;
  background: #fff;
}

.scroll-with-no-bar {
  overflow: scroll
}

.scroll-with-no-bar::-webkit-scrollbar {
  display: none
}

.page-content {
  display: flex;
  flex-direction: column;
}

.page-section {
  flex: 1;
  height: 0;
}

.slide-enter, .slide-leave-to{

  transform: translateY(100%);
  z-index: 1;
}

.border-top-1px {
  position: relative;
}

.touch-active:active {
  background: #dcdbdb !important;
}

.follow {
  padding: 14*$unit 0;
  width: 150*$unit;
  border: 1px #6cbd45 solid;
  text-align: center;
  color: #6cbd45;
  font-size: 26*$unit;
  border-radius: 5*$unit;
}
.edit-btn {
  padding: 14*$unit 35*$unit;
  /* width: 140*$unit; */
  border: 1px #007fff solid;
  color: #007fff;
  font-size: 26*$unit;
  border-radius: 5*$unit;
}
.follow.active {
  background: #6cbd45;
  border: none;
  color: #fff;
}
.follow .iconfont{
  padding: 0;
  margin-right: 10*$unit;
  font-size: 26*$unit;
}

.border-top-1px::after {
  content: ' ';
  width: 100%;
  height: 1px;
  background: #edeeef;
  position: absolute;
  left: 0;
  top: 0;
  overflow: hidden;
  /* border-bottom: 1px solid #71777c; */
  transform-origin: left bottom;
}

.border-bottom-1px {
  position: relative;
}

.border-bottom-1px::after {
  content: ' ';
  width: 100%;
  height: 1px;
  background: #edeeef;
  position: absolute;
  left: 0;
  bottom: 0;
  overflow: hidden;
  /* border-bottom: 1px solid #71777c; */
  transform-origin: left bottom;
}

@media only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (min-device-pixel-ratio: 1.5) {
  .border-bottom-1px::after {
    -webkit-transform: scaleY(.7);
    transform: scaleY(.7);
  }
  .border-top-1px::after {
    -webkit-transform: scaleY(.7);
    transform: scaleY(.7);
  }
}

@media only screen and (-webkit-min-device-pixel-ratio: 2), only screen and (min-device-pixel-ratio: 2) {
  .border-bottom-1px::after {
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
  }
  .border-top-1px::after {
    -webkit-transform: scaleY(.7);
    transform: scaleY(.7);
  }
}

@media only screen and (-webkit-min-device-pixel-ratio: 3), only screen and (min-device-pixel-ratio: 3) {
  .border-bottom-1px ::after {
    -webkit-transform: scaleY(.33);
    transform: scaleY(.33);
  }
  .border-top-1px::after {
    -webkit-transform: scaleY(.7);
    transform: scaleY(.7);
  }
}